<div class="log-container">
  <div class="log-img">
    <img src="/images/welcome-bg.png" alt="Avocado plate">
  </div>
  <div class="log-form">
    <h2>Signup</h2>

    <form action="/auth/signup" method="POST" id="form-container">
      <label for="username">Username</label>
      <input id="username" type="text" name="username" placeholder="Username">

      <br><br>

      <label for="password">Password</label>
      <input id="password" type="password" name="password" placeholder="Your password">
      <br>
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}

      <br>

      <button>Create account</button>
      <p><br>
        <a href="/auth/github" class="git-btn">Sign in via Github</a>
      </p><br>
      <p>
        <a href="/auth/facebook" class="fb-btn">Sign in via Facebook</a>
      </p><br>
      <p class="account-message">
        Do you already have an account?
        <a href="/auth/login">Login</a>
      </p>
    </form>
  </div>

</div>