<div class="log-container">
  <div class="log-img">
    <img src="/images/welcome-bg.png" alt="Avocado plate">
  </div>
  <div class="log-form">
    <h2>Login</h2>
    <form action="/auth/login" method="POST" id="form-container">
      <label for="username">Username</label>
      <input id="username" type="text" name="username" placeholder="Username">

      <br><br>

      <label for="password">Password</label>
      <input id="password" type="password" name="password" placeholder="Your password">
      <br>
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}

      <br>

      <button>Login</button>


      <br>
      <p>
        <a href="/auth/github"><button class="git-btn">Login via Github</button></a>
      </p>
      <p>
        <a href="/auth/facebook"><button class="fb-btn">Login via Facebook</button></a>
      </p>
      <p class="account-message">
        Don't have an account yet?
        <a href="/auth/signup">Signup</a>
      </p>
    </form>
  </div>

</div>